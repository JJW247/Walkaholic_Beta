<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogAlert"
    android:layout_width="280dp"
    android:layout_height="132dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/box_dialog_corner_white_8dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/dialogAlertTv1"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#6C6B67"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/dialogAlertView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dialogAlertView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E5E5E5"
        app:layout_constraintBottom_toTopOf="@id/dialogAlertLayout1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogAlertTv1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogAlertLayout1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogAlertView1">

        <TextView
            android:id="@+id/dialogAlertTvNo"
            android:layout_width="139dp"
            android:layout_height="42dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="아니요"
            android:textColor="#6C6B67"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dialogAlertView2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialogAlertView2"
            android:layout_width="2dp"
            android:layout_height="42dp"
            android:background="#E5E5E5"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dialogAlertTvNo"
            app:layout_constraintRight_toLeftOf="@id/dialogAlertTvYes"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogAlertTvYes"
            android:layout_width="139dp"
            android:layout_height="42dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="네"
            android:textColor="#F9A25B"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dialogAlertView2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>