<resources>
    <!-- Base Screen Theme -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.CommonButton</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="colorPrimary">#F9A25B</item>
        <item name="colorPrimaryVariant">@color/mdWhite1000</item>
        <item name="colorSecondary">@color/mdWhite1000</item>
        <item name="colorSecondaryVariant">@color/mdWhite1000</item>
        <item name="android:colorBackground">@color/colorActivityBackground</item>
        <item name="colorSurface">@color/mdWhite1000</item>
        <item name="colorError">@color/mdWhite1000</item>
        <item name="colorOnPrimary">@color/mdWhite1000</item>
        <item name="colorOnSecondary">@color/mdWhite1000</item>
        <item name="colorOnBackground">@color/mdWhite1000</item>
        <item name="colorOnSurface">#E3E0DB</item>
        <item name="colorOnError">@color/mdWhite1000</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Auth Screen Theme -->
    <style name="Theme.AuthTheme" parent="Theme.App">
        <item name="android:colorBackground">@color/mdWhite1000</item>
    </style>
    <!-- Guide Screen Theme -->
    <style name="Theme.GuideTheme" parent="Theme.App">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">#FF000000</item>
    </style>
    <!-- Splash Screen Theme -->
    <style name="Theme.SplashTheme" parent="Theme.App">
        <item name="android:background">@color/mdWhite1000</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Dashboard Screen Theme -->
    <style name="Theme.DashboardCharacterTheme" parent="Theme.App">
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>
    <!-- Challenge Screen Theme -->
    <style name="Theme.ChallegeTheme" parent="Theme.App">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
    </style>
    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">#E3E0DB</item>
    </style>
    <style name="TextAppearance.App.CommonButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Base Tab Layout Style -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextColor">@color/mdWhite1000</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:background">#F9F9F9</item>
    </style>
    <style name="ThemeOverlay.App.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_layout</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/noto_sans_black</item>
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textColor">@color/mdWhite1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Top Tab Layout -->
    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Snack Bar Style -->
    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/mdWhite1000</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnSurface">#000000</item>
    </style>

